= form_for @listing, :html => {:multipart => true} do |f|
  - if @listing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@listing.errors.count, "error")} prohibited this listing from being saved:"
      %ul
        - @listing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :photo
    = f.file_field :photo
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :date_of_birth
    = f.date_select :date_of_birth
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :meeting_venue
    = f.text_area :meeting_venue
  .field
    = f.label :meeting_time
    = f.datetime_select :meeting_time
  .field
    = f.label :date_of_death
    = f.date_select :date_of_death
  .field
    = f.label :comments
    = f.text_area :comments
  .actions
    = f.submit 'Save'
