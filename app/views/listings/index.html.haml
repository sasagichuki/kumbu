.row
  .large-12.columns.panel
    %h1 All Listings

.row
  .large-12.columns
    .row
      -@listings.each do |listing|
        %ul.large-3.columns.listing
          %li
            %h5= listing.title
          %li.panel
            = image_tag(listing.image_url)
          %li.panel
            = listing.date_of_birth
          %li.panel
            = listing.date_of_death
          %li.panel
            = truncate(strip_tags(listing.description), :length => 200)
          %li.panel
            %h6 Meeting Venue
            %br/
            = listing.meeting_venue
          %li.panel
            %h6 Meeting Time
            %br/
            = listing.meeting_time
          %li.panel
            = listing.comments
          .actions_bar.large-12.columns.panel
            = link_to 'See Full Listing', listing
          .edit_bar
            .large-6.columns.panel
              = link_to 'Edit', edit_listing_path(listing)
            .large-6.columns.panel
              = link_to 'Delete', listing, :method => :delete, :data => {:confirm => 'Are you Sure ?'}

    = link_to 'New Listing', new_listing_path
